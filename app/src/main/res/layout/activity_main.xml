<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_main_1"/>
    <TextView
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:text="Now Playing:"
            android:textSize="50sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/seoul_namsan_b"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/textView2"/>
    <TextView
            android:text="Alan Walker, K-391, Tungevaag, Mangoo - PLAY"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/seoul_hangang_b"
            android:layout_width="400dp"
            android:layout_height="80dp" android:id="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.495" android:layout_marginTop="452dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>