<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/black"
              android:orientation="vertical">

    <!-- 로고와 검색 바 레이아웃 -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

        <!-- 로고 이미지 -->
        <ImageView
                android:id="@+id/logo_image_view"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:layout_marginStart="3dp"
                android:src="@drawable/app_icon_circle"
                android:layout_marginRight="8dp"/>

        <!-- 검색 바 -->
        <!-- 흰색으로 설정 -->
    </LinearLayout>

    <TextView
            android:id="@+id/description_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/seoul_namsan_b"
            android:textSize="20sp"
            android:text="기타 재생목록"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:textColor="#FFFFFF" /> <!-- 흰색으로 설정 -->

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

        <!-- 첫 번째 앨범 아이콘 -->
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">



            <ImageView
                    android:id="@+id/album_icon_1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="10dp"
                    android:layout_marginEnd="25dp"
                    android:src="@drawable/music_album_icon_21"/>

            <TextView
                    android:id="@+id/album_icon_1_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="25dp"
                    android:text="Interstellar"
                    android:fontFamily="@font/seoul_namsan_b"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="-3dp"/>
        </LinearLayout>

        <!-- 두 번째 앨범 아이콘 -->
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/album_icon_2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/music_album_icon_4"/>

            <TextView
                    android:id="@+id/album_icon_2_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="text_pl_2"
                    android:fontFamily="@font/seoul_namsan_b"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="-3dp"/>
        </LinearLayout>

        <!-- 세 번째 앨범 아이콘 -->
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/album_icon_3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="10dp"
                    android:layout_marginStart="25dp"
                    android:src="@drawable/music_album_icon_9"/>

            <TextView
                    android:id="@+id/album_icon_3_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:text="text_pl_3"
                    android:fontFamily="@font/seoul_namsan_b"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="-3dp"/>
        </LinearLayout>
    </LinearLayout>


    <!-- 또 다른 텍스트 뷰 -->
    <!-- 흰색으로 설정 -->

    <!-- 앨범 아이콘 그리드 -->
    <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="1">

        <ImageView
                android:id="@+id/album_icon_4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/hinkik_profile"/>

        <ImageView
                android:id="@+id/album_icon_5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:src="@drawable/thefatrat_profile"/>

        <ImageView
                android:id="@+id/album_icon_6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/alanwalker_profile"/>

    </GridLayout>



</LinearLayout>